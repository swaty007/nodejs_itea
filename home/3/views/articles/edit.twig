{% extends 'layout.twig' %}

{% block body %}
    <h1>{{title}}</h1>

    <form action="/update/{{ article._id }}" method="POST">

        <input type="text" name="title" placeholder="Title" value="{{ article.title }}">
        <textarea type="text" name="text" placeholder="Text">
            {{ article.text }}
        </textarea>

        <button type="submit">Submit</button>
    </form>
{% endblock %}
